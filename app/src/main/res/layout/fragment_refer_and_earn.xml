<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".refer.ReferAndEarn"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrant1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/primary_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
 
        <TextView
            android:id="@+id/myEarnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Earnings"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rounded_bg_5"
            app:layout_constraintVertical_bias=".15"
            app:layout_constraintTop_toTopOf="@id/constrant1"
            app:layout_constraintBottom_toBottomOf="@id/constrant1"
            app:layout_constraintRight_toRightOf="@id/constrant1"/>

        <TextView
            android:id="@+id/moneytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Your Friend And\n Earn Money"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintVertical_bias=".38"
            android:fontFamily="@font/futura_medium"
            app:layout_constraintTop_toTopOf="@id/constrant1"
            app:layout_constraintLeft_toLeftOf="@id/constrant1"
            app:layout_constraintRight_toRightOf="@id/constrant1"
            app:layout_constraintBottom_toBottomOf="@id/constrant1"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/moneytxt"
            android:src="@drawable/customer"
            android:contentDescription="@null"
            android:layout_marginTop="10dp"
            android:id="@+id/imgCustomer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Refer Balance: 0â‚¹"
            app:layout_constraintTop_toBottomOf="@+id/imgCustomer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_light"
            android:id="@+id/availableBalance"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrant2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="3dp"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/constrant1"
        app:layout_constraintBottom_toBottomOf="@id/constrant1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/walletimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/wallet_64"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="@id/constrant2"
            app:layout_constraintLeft_toLeftOf="@id/constrant2"
            app:layout_constraintBottom_toBottomOf="@id/constrant2"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/futura_medium"
            android:text="Share Your Referral Link And Invite Your Friends via SMS/Email/Whatsapp "
            app:layout_constraintTop_toTopOf="@id/constrant2"
            app:layout_constraintBottom_toBottomOf="@id/constrant2"
            app:layout_constraintLeft_toRightOf="@id/walletimg"
            app:layout_constraintRight_toRightOf="@id/constrant2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrant3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle"
        app:layout_constraintTop_toBottomOf="@id/constrant2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@id/constrant4">

        <ImageView
            android:id="@+id/group"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_round_group_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@color/royal_blue"
        app:layout_constraintTop_toTopOf="@id/constrant3"
        app:layout_constraintBottom_toBottomOf="@id/constrant3"
        app:layout_constraintLeft_toRightOf="@id/constrant3"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrant4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/constrant2"
        app:layout_constraintLeft_toRightOf="@id/constrant3"
        app:layout_constraintRight_toLeftOf="@id/constrant5">

        <ImageView
            android:id="@+id/signup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/signup"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@color/royal_blue"
        app:layout_constraintTop_toTopOf="@id/constrant4"
        app:layout_constraintBottom_toBottomOf="@id/constrant4"
        app:layout_constraintLeft_toRightOf="@id/constrant4"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrant5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/constrant2"
        app:layout_constraintLeft_toRightOf="@id/constrant4"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/getmoney"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/reward"
            app:tint="#33AAEC"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/grouptxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Invite Your Friend"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/futura_medium"
        app:layout_constraintTop_toBottomOf="@id/constrant3"
        app:layout_constraintLeft_toLeftOf="@id/constrant3"
        app:layout_constraintRight_toRightOf="@id/constrant3"/>

    <TextView
        android:id="@+id/signuptxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your Friend will Sign Up"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/futura_medium"
        app:layout_constraintTop_toBottomOf="@id/constrant4"
        app:layout_constraintLeft_toLeftOf="@id/constrant4"
        app:layout_constraintRight_toRightOf="@id/constrant4"/>

    <TextView
        android:id="@+id/getmoneytxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You will be get rewarded"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/futura_medium"
        app:layout_constraintTop_toBottomOf="@id/constrant5"
        app:layout_constraintLeft_toLeftOf="@id/constrant5"
        app:layout_constraintRight_toRightOf="@id/constrant5"/>

    <TextView
        android:id="@+id/referralcodetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR REFERRAL CODE"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/getmoneytxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/referralcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32433eq"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingHorizontal="15dp"
        android:paddingVertical="7dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dash_stroke_bg___"
        app:layout_constraintTop_toBottomOf="@id/referralcodetxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/copycodetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAP TO COPY"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/referralcode"
        android:textColor="@color/royal_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/refernowbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFER NOW"
        app:cornerRadius="10dp"
        android:layout_marginTop="20dp"
        app:icon="@drawable/share_24"
        android:backgroundTint="@color/secondary_1"
        app:layout_constraintTop_toBottomOf="@id/copycodetxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/termsandconditiontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*T&amp;C"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/refernowbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/royal_blue"/>



</androidx.constraintlayout.widget.ConstraintLayout>