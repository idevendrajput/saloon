        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/black"
        />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:id="@+id/paymentStatus"
        android:layout_marginTop="5dp"
