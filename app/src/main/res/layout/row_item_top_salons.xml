<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:layout_margin="10dp"
    android:backgroundTint="#EFF9FB"
    android:background="@drawable/rounded_bg_15"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:riv_corner_radius="10dp"
        android:id="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/slider1"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Asha Fresh look"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:fontFamily="@font/futura_medium"
        android:textSize="12sp"
        android:maxLines="1"
        android:layout_marginHorizontal="7dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:id="@+id/salonName"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        app:layout_constraintTop_toBottomOf="@+id/salonName"
        app:layout_constraintStart_toStartOf="@+id/salonName"
        android:rating="3"
        android:layout_marginStart="-3dp"
        android:numStars="5"
        android:id="@+id/rating"
        android:progressTint="@android:color/holo_orange_light"
        android:secondaryProgressTint="@android:color/holo_orange_light"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Services"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        app:layout_constraintStart_toStartOf="@+id/salonName"
        app:layout_constraintEnd_toEndOf="@id/salonName"
        android:maxLines="1"
        android:textSize="10sp"
        android:fontFamily="@font/futura_medium"
        android:layout_marginTop="2dp"
        android:id="@+id/services"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Men"
        app:layout_constraintStart_toStartOf="@+id/salonName"
        android:background="@drawable/rounded_bg"
        app:layout_constraintTop_toBottomOf="@+id/services"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:backgroundTint="@color/white_light"
        android:fontFamily="@font/open_sans_light"
        android:textSize="12sp"
        android:id="@+id/salonType"
        android:textColor="@color/black"
        android:drawablePadding="5dp"
        app:drawableStartCompat="@drawable/man_16" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="300Km"
        app:layout_constraintStart_toStartOf="@+id/salonName"
        app:layout_constraintEnd_toEndOf="@+id/salonName"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/salonType"
        android:textSize="12sp"
        android:drawablePadding="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/futura_medium"
        android:id="@+id/distance"
        app:drawableStartCompat="@drawable/marker_24" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/salonName"
        app:layout_constraintEnd_toEndOf="@id/salonName"
        android:text="Book"
        android:id="@+id/book"
        app:layout_constraintTop_toBottomOf="@+id/distance"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/secondary_1"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>