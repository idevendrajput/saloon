<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_bg_15"
    android:backgroundTint="#F7FBFF"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/imageView"
        android:src="@drawable/hairstyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:text="xyz text"
        android:fontFamily="@font/futura_medium"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Services"
        app:layout_constraintStart_toStartOf="@+id/title"
        android:background="@drawable/rounded_bg"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:backgroundTint="@color/white_light"
        android:fontFamily="@font/open_sans_light"
        android:textSize="13sp"
        android:id="@+id/dataType"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataType"
        android:background="@drawable/gradient_royal_blue_round"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="Open"
        android:gravity="center"
        android:padding="7dp"
        android:id="@+id/open"
        />

</androidx.constraintlayout.widget.ConstraintLayout>