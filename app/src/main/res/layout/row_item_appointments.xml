<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_bg_15"
    android:backgroundTint="#FAEFEF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Service Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/serviceName"
        android:layout_marginHorizontal="10dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:fontFamily="@font/futura_medium"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Salon Name"
        app:layout_constraintTop_toBottomOf="@+id/serviceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/salonName"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/futura_medium"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        />

     <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Amount Paid: 100â‚¹"
        app:layout_constraintTop_toBottomOf="@+id/salonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/price"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        />

     <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="01/01/2022"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/dateTime"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTime"
        android:text="This is response"
        android:fontFamily="@font/futura_medium"
        android:id="@+id/response"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="14sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>